<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sososhopping_customer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_400</item>
        <item name="colorPrimaryVariant">@color/main_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color.
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>-->

        <item name="colorSecondary">@color/main_400</item>
        <item name="colorSecondaryVariant">@color/main_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="android:textColor">@color/text_400</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/text_800</item>
        <item name="colorSecondary">@color/main_400</item>
    </style>

    <style name="Theme.Sososhopping_customer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sososhopping_customer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Sososhopping_customer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--splash-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash_screen</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/text_400</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/orange_rating</item>
        <item name="colorControlNormal">@color/text_400</item>
    </style>

    <!--redButton-->
    <style name="CustomRedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/red_cart</item>
        <item name="colorOnPrimary">@color/red_cart</item>
        <item name="colorControlHighlight">@color/red_cart</item>
    </style>





</resources>